/* CareSync Healthcare Management System - Complete Color Palette */

/* Links */
a {
  color: var(--primary-600);
  text-decoration: none;
  transition: color 0.2s ease;
}

a:hover {
  color: var(--primary-700);
  text-decoration: underline;
}

/* Headings are defined later to ensure color variables are available */

:root {
  /* ===========================================
     CARESYNC HEALTHCARE COLOR PALETTE v2.0
     =========================================== */

  /* PRIMARY BRAND COLORS - Healthcare Trust & Professionalism */
  --primary-50: #f0f9ff;
  /* Very light blue */
  --primary-100: #e0f2fe;
  /* Light blue */
  --primary-200: #bae6fd;
  /* Lighter blue */
  --primary-300: #7dd3fc;
  /* Light blue */
  --primary-400: #38bdf8;
  /* Medium blue */
  --primary-500: #0ea5e9;
  /* Professional blue */
  --primary-600: #0284c7;
  /* Deep blue */
  --primary-700: #0369a1;
  /* Dark blue */
  --primary-800: #075985;
  /* Very dark blue */
  --primary-900: #0c4a6e;
  /* Deep navy */

  /* SECONDARY COLORS - Healthcare Support */
  --secondary-50: #f8fafc;
  /* Very light gray-blue */
  --secondary-100: #f1f5f9;
  /* Light gray-blue */
  --secondary-200: #e2e8f0;
  /* Light gray */
  --secondary-300: #cbd5e1;
  /* Medium light gray */
  --secondary-400: #94a3b8;
  /* Medium gray */
  --secondary-500: #64748b;
  /* Standard gray */
  --secondary-600: #475569;
  /* Dark gray */
  --secondary-700: #334155;
  /* Darker gray */
  --secondary-800: #1e293b;
  /* Very dark gray */
  --secondary-900: #0f172a;
  /* Almost black */

  /* HEALTHCARE STATUS COLORS - Medical Conditions & States */
  --health-critical: #dc2626;
  /* Critical red */
  --health-emergency: #b91c1c;
  /* Emergency red */
  --health-stable: #059669;
  /* Stable green */
  --health-improving: #0d9488;
  /* Improving teal */
  --health-monitoring: #d97706;
  /* Monitoring amber */
  --health-caution: #ea580c;
  /* Caution orange */
  --health-recovered: #16a34a;
  /* Recovered green */
  --health-discharged: #15803d;
  /* Discharged green */

  /* SYSTEM STATUS COLORS - Application States */
  --success-50: #f0fdf4;
  /* Very light green */
  --success-100: #dcfce7;
  /* Light green */
  --success-500: #22c55e;
  /* Success green */
  --success-600: #16a34a;
  /* Dark success green */
  --success-700: #15803d;
  /* Very dark success green */

  --warning-50: #fffbeb;
  /* Very light amber */
  --warning-100: #fef3c7;
  /* Light amber */
  --warning-500: #f59e0b;
  /* Warning amber */
  --warning-600: #d97706;
  /* Dark warning amber */
  --warning-700: #b45309;
  /* Very dark warning amber */

  --error-50: #fef2f2;
  /* Very light red */
  --error-100: #fee2e2;
  /* Light red */
  --error-500: #ef4444;
  /* Error red */
  --error-600: #dc2626;
  /* Dark error red */
  --error-700: #b91c1c;
  /* Very dark error red */

  --info-50: #f0f9ff;
  /* Very light blue */
  --info-100: #e0f2fe;
  /* Light blue */
  --info-500: #3b82f6;
  /* Info blue */
  --info-600: #2563eb;
  /* Dark info blue */
  --info-700: #1d4ed8;
  /* Very dark info blue */

  /* NEUTRAL COLORS - Universal Grays */
  --neutral-50: #fafafa;
  /* Very light gray */
  --neutral-100: #f5f5f5;
  /* Light gray */
  --neutral-200: #e5e5e5;
  /* Lighter gray */
  --neutral-300: #d4d4d4;
  /* Light gray */
  --neutral-400: #a3a3a3;
  /* Medium gray */
  --neutral-500: #737373;
  /* Standard gray */
  --neutral-600: #525252;
  /* Dark gray */
  --neutral-700: #404040;
  /* Darker gray */
  --neutral-800: #262626;
  /* Very dark gray */
  --neutral-900: #171717;
  /* Almost black */

  /* SPECIALTY COLORS - Healthcare Specific */
  --medical-blue: #0891b2;
  /* Medical blue */
  --care-cyan: #06b6d4;
  /* Care cyan */
  --trust-navy: #1e3a8a;
  /* Trust navy */
  --calm-teal: #0f766e;
  /* Calm teal */
  --hope-purple: #7c3aed;
  /* Hope purple */

  /* UI FOUNDATION COLORS */
  --surface-primary: #ffffff;
  /* Primary surface (white) */
  --surface-secondary: #f8fafc;
  /* Secondary surface */
  --surface-tertiary: #f1f5f9;
  /* Tertiary surface */

  --border-primary: #e2e8f0;
  /* Primary borders */
  --border-secondary: #cbd5e1;
  /* Secondary borders */
  --border-accent: #94a3b8;
  /* Accent borders */

  /* TEXT COLORS - Optimized for Readability */
  --text-primary: #171717;
  /* Primary text (high contrast) */
  --text-secondary: #525252;
  /* Secondary text */
  --text-tertiary: #737373;
  /* Tertiary text */
  --text-muted: #a3a3a3;
  /* Muted text */
  --text-inverse: #ffffff;
  /* Inverse text (white) */

  /* SEMANTIC ALIASES - For Easy Reference */
  --primary: var(--primary-600);
  --secondary: var(--secondary-600);
  --success: var(--success-500);
  --warning: var(--warning-500);
  --danger: var(--error-500);
  --info: var(--info-500);
  --light: var(--surface-secondary);
  --white: var(--surface-primary);
  --gray: var(--neutral-500);
  --border: var(--border-primary);

  /* TYPOGRAPHY & SPACING */
  --font-family: 'Poppins', system-ui, -apple-system, sans-serif;
  --border-radius-sm: 4px;
  --border-radius: 6px;
  --border-radius-md: 8px;
  --border-radius-lg: 12px;
  --border-radius-xl: 16px;

  /* SHADOWS - Layered Depth System */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);

  /* HEALTHCARE SPECIFIC SHADOWS */
  --shadow-medical: 0 2px 8px rgba(6, 182, 212, 0.15);
  --shadow-critical: 0 2px 8px rgba(220, 38, 38, 0.15);
  --shadow-success: 0 2px 8px rgba(34, 197, 94, 0.15);
}

/* Legacy variable aliases to align older pages with new palette */
:root {
  --primary-color: var(--primary-600);
  --accent-color: var(--primary-400);
  --danger-color: var(--error-500);
  --warning-color: var(--warning-500);
  --success-color: var(--success-500);
  --info-color: var(--info-500);
}

/* Global Styles */
body {
  font-family: var(--font-family);
  background-color: var(--surface-secondary);
  color: var(--text-primary);
  line-height: 1.6;
  font-size: 0.95rem;
  overflow-x: hidden;
}

* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ===================== THEME UTILITIES ===================== */
.cs-bg-primary {
  background-color: var(--primary-color) !important;
  color: var(--text-inverse) !important;
}

.cs-bg-accent {
  background: linear-gradient(135deg, var(--primary-color), var(--accent-color)) !important;
  color: var(--text-inverse) !important;
}

.cs-text-primary {
  color: var(--primary-color) !important;
}

.cs-text-muted {
  color: var(--text-tertiary) !important;
}

.cs-border-primary {
  border-color: var(--primary-color) !important;
}

.cs-shadow-primary {
  box-shadow: var(--shadow-medical) !important;
}

/* cs-badge variants consolidated further down to a single, updated definition */

/* Status badge normalization (consolidated; unify styling across entities) */
[class^="status-"],
[class*=" status-"] {
  font-size: .65rem;
  font-weight: 600;
  padding: .35rem .6rem;
  border-radius: var(--border-radius-sm);
  letter-spacing: .5px;
  text-transform: uppercase;
  line-height: 1;
  display: inline-block;
}

/* Button theming (Bootstrap override) */
.btn-primary {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.btn-primary:hover {
  background-color: var(--primary-700);
  border-color: var(--primary-700);
}

.btn-outline-primary {
  color: var(--primary-color);
  border-color: var(--primary-color);
}

.btn-outline-primary:hover {
  background-color: var(--primary-color);
  color: var(--text-inverse);
}

/* Form focus */
input:focus,
select:focus,
textarea:focus {
  box-shadow: 0 0 0 2px rgba(2, 132, 199, 0.25);
  border-color: var(--primary-color);
}

/* ===================== CARD STYLES - Enhanced ===================== */
.card {
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-sm);
  border-radius: var(--border-radius-lg);
  background: var(--surface-primary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  margin-bottom: 1.5rem;
}

.card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.card-header {
  background: linear-gradient(135deg, var(--primary-50), var(--primary-100));
  border-bottom: 2px solid var(--primary-200);
  padding: 1.25rem 1.5rem;
  font-weight: 600;
  font-size: 1.1rem;
  color: var(--primary-700);
  display: flex;
  align-items: center;
}

.card-header i {
  font-size: 1.2rem;
  opacity: 0.8;
  margin-right: 0.5rem;
}

.card-body {
  padding: 1.5rem;
}

.card-footer {
  background-color: var(--surface-secondary);
  border-top: 1px solid var(--border-primary);
  padding: 1rem 1.5rem;
}

/* ===================== TABLE STYLES - Enhanced ===================== */
.table {
  margin-bottom: 0;
}

table thead th {
  background-color: var(--secondary-100);
  color: var(--neutral-800);
  font-weight: 600;
  text-transform: uppercase;
  font-size: 0.8rem;
  letter-spacing: 0.5px;
  padding: 1rem 0.75rem;
  border-bottom: 2px solid var(--border-secondary);
}

.table tbody tr {
  transition: all 0.2s ease;
}

.table tbody tr:hover {
  background-color: var(--primary-50);
  transform: scale(1.001);
}

.table td {
  vertical-align: middle;
  padding: 1rem 0.75rem;
}

.table-responsive {
  border-radius: var(--border-radius);
  overflow: hidden;
}

/* Scrollbar (WebKit) */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: var(--surface-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--primary-400);
  border-radius: 6px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-600);
}

/* Text Readability Improvements */
.text-muted {
  color: var(--text-muted) !important;
}

.text-primary {
  color: var(--text-primary) !important;
}

.text-secondary {
  color: var(--text-secondary) !important;
}

.text-tertiary {
  color: var(--text-tertiary) !important;
}

.text-success {
  color: var(--success-600) !important;
}

.text-warning {
  color: var(--warning-600) !important;
}

.text-danger {
  color: var(--error-600) !important;
}

.text-info {
  color: var(--info-600) !important;
}

.text-inverse {
  color: var(--text-inverse) !important;
}

/* Headings */
h1,
h2,
h3,
h4,
h5,
h6 {
  color: var(--text-primary);
  font-weight: 600;
  line-height: 1.3;
}

h1 {
  font-size: 2rem;
}

h2 {
  font-size: 1.75rem;
}

h3 {
  font-size: 1.5rem;
}

h4 {
  font-size: 1.25rem;
}

h5 {
  font-size: 1.1rem;
}

h6 {
  font-size: 1rem;
}

/* Sidebar */
.sidebar {
  width: 280px;
  background: linear-gradient(180deg, var(--secondary-800) 0%, var(--secondary-900) 100%);
  color: var(--text-inverse);
  position: fixed;
  height: 100vh;
  overflow-y: auto;
  box-shadow: var(--shadow-lg);
  z-index: 1000;
}

.sidebar-content {
  padding: 0;
}

/* Brand/Logo */
.navbar-brand {
  font-size: 1.5rem;
  font-weight: 700;
  color: white !important;
  text-decoration: none;
  padding: 1.5rem 2rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}

.navbar-brand i {
  color: var(--secondary);
  font-size: 1.8rem;
}

/* Navigation */
.nav-item {
  margin: 0.25rem 0;
}

.nav-link {
  color: rgba(255, 255, 255, 0.8) !important;
  text-decoration: none;
  padding: 0.875rem 2rem;
  display: flex;
  align-items: center;
  border-radius: 0 25px 25px 0;
  margin-right: 1rem;
  position: relative;
}

.nav-link:hover {
  background: rgba(59, 130, 246, 0.15);
  color: white !important;
}

.nav-link.active {
  background: var(--secondary);
  color: white !important;
  border-left: 4px solid rgba(255, 255, 255, 0.8);
}

.nav-link i {
  width: 20px;
  text-align: center;
  font-size: 1.1rem;
}

/* Sidebar Footer */
.sidebar-footer {
  padding: 1.5rem 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(0, 0, 0, 0.1);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}

main {
  margin-left: 280px;
  background: linear-gradient(135deg, var(--surface-secondary) 0%, var(--neutral-50) 100%);
  min-height: 100vh;
}

.content {
  padding: 2rem;
}

/* Topbar for mobile */
.topbar {
  display: none;
  height: 56px;
  padding: 0 1rem;
  border-bottom: 1px solid var(--border-primary);
  background: var(--surface-primary);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1100;
}

.mobile-sidebar-toggle {
  font-size: 1.25rem;
  color: var(--primary-600);
}

/* Overlay shown when sidebar is open on small screens */
.mobile-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 1050;
}

/* When sidebar is open on mobile, shift styles */
.sidebar-open .sidebar {
  transform: translateX(0);
}

/* Default off-canvas (hidden) on small screens */
.sidebar {
  transition: transform 0.25s ease;
}

/* Ensure content is below topbar when present */
.sidebar-open main .content {
  padding-top: 1.5rem;
}

/* Responsive rules */
@media (max-width: 991.98px) {
  .topbar {
    display: flex;
  }

  /* Sidebar becomes off-canvas */
  .sidebar {
    width: 260px;
    position: fixed;
    left: 0;
    top: 56px;
    /* below topbar */
    height: calc(100vh - 56px);
    transform: translateX(-100%);
    box-shadow: 0 8px 30px rgba(15, 23, 42, 0.2);
    z-index: 1200;
  }

  /* When open, sidebar slides in */
  .sidebar-open .sidebar {
    transform: translateX(0);
  }

  main {
    margin-left: 0;
    padding-top: 56px;
    /* leave room for topbar */
  }

  .content {
    padding: 1rem;
  }

  /* Make tables responsive within card body */
  .table-responsive {
    overflow-x: auto;
  }
}

@media (min-width: 992px) {
  .topbar {
    display: none;
  }

  .mobile-overlay {
    display: none;
  }
}

/* Cards - Duplicate styles consolidated above in CARD STYLES section */
/* Keeping only alternate card header style for special cases */
.card-header.dark {
  background: var(--secondary-800);
  color: var(--text-inverse);
  padding: 1rem 1.5rem;
  border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
  border-bottom: none;
  border-radius: 0 0 var(--border-radius) var(--border-radius);
}

/* Card with Table Layout Fix */
.card .card-body.p-0 .table-responsive {
  margin: 0;
}

.card .card-body.p-0 .table-responsive .table {
  margin-bottom: 0;
  border-radius: 0;
}

.card .card-body.p-0 .table-responsive .table thead th {
  border-top: none;
}

.card .card-body.p-0 .table-responsive .table tbody td:first-child {
  border-left: none;
}

.card .card-body.p-0 .table-responsive .table tbody td:last-child {
  border-right: none;
}

/* Clickable table row helper */
.clickable-row {
  cursor: pointer;
}

.clickable-row:hover {
  background: var(--surface-tertiary);
}

.clickable-row:focus {
  outline: 2px solid var(--primary-100);
  outline-offset: -2px;
}

/* ===================== DASHBOARD CARDS - Enhanced ===================== */
.dashboard-card {
  background: linear-gradient(135deg, var(--surface-primary), rgba(255, 255, 255, 0.95));
  border: 1px solid var(--border-primary);
  border-radius: var(--border-radius-lg);
  padding: 2rem 1.5rem;
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 180px;
  margin-bottom: 1.5rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
}

.dashboard-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, transparent, currentColor, transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.dashboard-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.dashboard-card:hover::before {
  opacity: 1;
}

.dashboard-card i {
  color: var(--primary-600);
  margin-bottom: 1rem;
  opacity: 0.8;
  font-size: 2.5rem;
}

.dashboard-card h3 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.dashboard-card p {
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin: 0;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Card Variations with Color Coding */
.dashboard-card.patients {
  border-left: 4px solid var(--info);
}

.dashboard-card.patients i {
  color: var(--info);
}

.dashboard-card.doctors {
  border-left: 4px solid var(--success);
}

.dashboard-card.doctors i {
  color: var(--success);
}

.dashboard-card.appointments {
  border-left: 4px solid var(--warning);
}

.dashboard-card.appointments i {
  color: var(--warning);
}

.dashboard-card.billing {
  border-left: 4px solid var(--danger);
}

.dashboard-card.billing i {
  color: var(--danger);
}

/* Responsive Dashboard Cards */
@media (max-width: 768px) {
  .dashboard-card {
    padding: 1.5rem 1rem;
    min-height: 140px;
  }

  .dashboard-card i {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .dashboard-card h3 {
    font-size: 2rem;
  }

  .dashboard-card p {
    font-size: 0.8rem;
  }
}

