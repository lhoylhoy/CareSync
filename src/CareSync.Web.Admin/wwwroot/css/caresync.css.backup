}

.quick-action-card:hover i {
  transform: scale(1.1);
}

/* ===================== UTILITY CLASSES ===================== */
.text-truncate-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.text-truncate-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hover-lift {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-lift:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.glass-effect {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.gradient-text {
  background: linear-gradient(135deg, var(--primary-600), var(--primary-800));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ===================== EMPTY STATES ===================== */
.empty-state {
  text-align: center;
  padding: 3rem 2rem;
  color: var(--text-secondary);
}

.empty-state i {
  font-size: 4rem;
  color: var(--text-muted);
  margin-bottom: 1rem;
  opacity: 0.5;
}

.empty-state h3 {
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.empty-state p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
}

/* ===================== ALERT STYLES - Enhanced ===================== */
.alert {
  border-radius: var(--border-radius-lg);
  padding: 1rem 1.25rem;
  border: 2px solid transparent;
  display: flex;
  align-items: flex-start;
  margin-bottom: 1rem;
  box-shadow: var(--shadow-sm);
  animation: slideInFromRight 0.3s ease-out;
}

.alert i:first-child {
  margin-right: 0.75rem;
  font-size: 1.25rem;
  flex-shrink: 0;
}

.alert-success {
  background: linear-gradient(135deg, var(--success-50), rgba(255, 255, 255, 0.9));
  border-color: var(--success-300);
  color: var(--success-700);
}

.alert-info {
  background: linear-gradient(135deg, var(--info-50), rgba(255, 255, 255, 0.9));
  border-color: var(--info-300);
  color: var(--info-700);
}

.alert-warning {
  background: linear-gradient(135deg, var(--warning-50), rgba(255, 255, 255, 0.9));
  border-color: var(--warning-300);
  color: var(--warning-700);
}

.alert-danger {
  background: linear-gradient(135deg, var(--error-50), rgba(255, 255, 255, 0.9));
  border-color: var(--error-300);
  color: var(--error-700);
}

/* ===================== TOAST NOTIFICATIONS ===================== */
.toast {
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  border: none;
  overflow: hidden;
  min-width: 300px;
  animation: slideInFromRight 0.3s ease-out;
}

.toast-header {
  background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
  color: var(--text-inverse);
  border-bottom: none;
  padding: 0.75rem 1rem;
  font-weight: 600;
}

.toast-body {
  padding: 1rem;
  background: var(--surface-primary);
}

.toast.toast-success .toast-header {
  background: linear-gradient(135deg, var(--success-500), var(--success-600));
}

.toast.toast-error .toast-header {
  background: linear-gradient(135deg, var(--error-500), var(--error-600));
}

.toast.toast-warning .toast-header {
  background: linear-gradient(135deg, var(--warning-500), var(--warning-600));
}

.toast.toast-info .toast-header {
  background: linear-gradient(135deg, var(--info-500), var(--info-600));
}

/* ===================== LOADING STATES ===================== */
.skeleton {
  background: linear-gradient(90deg, var(--surface-secondary) 25%, var(--surface-tertiary) 50%, var(--surface-secondary) 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--border-radius);
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}

.spinner-border-sm {
  width: 1rem;
  height: 1rem;
  border-width: 0.15em;
}

/* ===================== RESPONSIVE IMPROVEMENTS ===================== */
@media (max-width: 768px) {
  .card-header {
    padding: 1rem;
    font-size: 1rem;
  }

  .card-body {
    padding: 1rem;
  }

  .btn {
    padding: 0.5rem 0.875rem;
    font-size: 0.875rem;
  }

  .dashboard-card {
    padding: 1.5rem 1rem;
    min-height: 150px;
  }

  .pagination .page-link {
    padding: 0.375rem 0.625rem;
    font-size: 0.875rem;
    min-width: 36px;
  }
}

@media (max-width: 576px) {
  h1 {
    font-size: 1.75rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  .modal-body {
    padding: 1rem;
  }
}
